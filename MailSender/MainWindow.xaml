<Window x:Name="WpfMailSender" x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Обычное сообщение" HorizontalAlignment="Left" Margin="122,174,0,0" VerticalAlignment="Top" Height="28" Width="128" Click="Button_Click"/>
        <Button Content="Сообщение с ошибкой" HorizontalAlignment="Left" Margin="298,174,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.252,-0.375" Height="28" Width="127" Click="Button_Click_1"/>
        <TextBox x:Name="tbSubject" HorizontalAlignment="Left" Margin="186,41,0,0" Text="Тема письма" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbBody" HorizontalAlignment="Left" Margin="186,83,0,0" Text="Текст письма" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" Height="70"/>

    </Grid>
</Window>
